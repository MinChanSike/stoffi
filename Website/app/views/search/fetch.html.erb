<p class='stats'>Found 123 results across <%=@search.sources.length%> places in <%=@results[:benchmark].real.round(2)%> seconds.</p>
<ul id='result-list'>
	
	<% if @results[:exact].has_key? :artist %>
		<% a = @results[:exact][:artist][:object] %>
		<%= render(partial: 'artists/large', object: a, as: :artist) %>
	<% end %>
	
	<% hits = @results[:hits].collect { |x| x[:object] }.compact %>
	<%= render(hits) || "No results found" %>
</ul>

<script>
// TODO: can someone please help me move this into search.js.coffee?
$("[data-type='hit'] img").load(function() { resizeImage($(this), 64); });
$(".exact img").load(function() { resizeImage($(this), 120); });
</script>