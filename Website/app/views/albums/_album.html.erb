<li class='clickable album' data-type='hit'>
	<div class='image'>
		<%= image_tag album.image, alt: album %>
	</div>
	<div class='content'>
		<h3><%= album %></h3>
		<p><%==t 'albums.description', artists: link_to_association(album.artists) %></p>
		<% if album.songs.top? %>
			<p><%=t('songs.plural').capitalize %>: <%= top_list(album.songs, limit: 3) %></p>
		<% end %>
	</div>
</li>