<footer id="footer">
	<p class="copyright">
		Â© <%= Time.now.year %> <a href="http://www.simplare.com">simplare</a>
	</p>
	<nav>
		<%= link_to t("legal.link"),   legal_path %>
		<%= link_to t("contact.link"), contact_path %>
		<%= link_to t("contribute.link"), "http://dev.stoffiplayer.com/wiki/Welcome?tm=6" %>
		<%= link_to t("blog"),    "https://blog.stoffiplayer.com" %>
		<%= link_to t("project"), "http://dev.stoffiplayer.com" %>
		<% if user_signed_in? %>
			<%= link_to t("apps.link"), apps_path %>
		<% end %>
	</nav>
	
	<ul id="languages">
		<% I18n.available_locales.each do |l| %>
			<% next if ["de", "uk", "cn", "en"].include? l.to_s %>
			<li>
				<% disp = image_tag(lang2flag(l)) %>
				<% if l == I18n.locale %>
					<%= disp %>
				<% else %>
					<%=link_to_language disp, params.merge(l: l) %>
				<% end %>
			</li>
		<% end %>
	</ul>
	
</footer>