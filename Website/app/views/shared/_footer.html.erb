	<ul id="languages">
		<% I18n.available_locales.each do |l| %>
			<% next if ["de", "uk", "cn", "en"].include? l.to_s %>
			<li>
				<% disp = image_tag(lang2flag(l)) %>
				<% if l == I18n.locale %>
					<%= disp %>
				<% else %>
					<%=link_to_language disp, params.merge(l: l) %>
				<% end %>
			</li>
		<% end %>
	</ul>
	
</footer>

